<div class="row">
  <div class="col-lg-12 text-center">
    <p>
      You're player <%= @player %>.
    </p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <table class="board">
      <tbody>
        <% for row in @board do %>
          <tr>
            <% for column in row do %>
              <td>
                <button class="btn"></button>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
